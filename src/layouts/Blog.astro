---
import BaseHead from "../components/BaseHead.astro";
import BlogHeader from "../components/BlogHeader.astro";
import Footer from "../components/Footer.astro";

type Props = {
  title: string;
  description: string;
  enableComments?: boolean;
  lang?: string;
};

const { title, description, enableComments = true, lang = "en" } = Astro.props;
const gscusThemeSrc = Astro.url.origin + "/gscus/theme.css";
---

<!doctype html>
<html lang={lang.toLowerCase()}>
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="serif-text bg-[#fbf9f7] h-screen flex flex-col">
    <div class="flex-1 mx-auto max-w-3xl px-4 py-6 pt-20 w-full">
      <BlogHeader />
      {/* Main Content */}
      <slot />
      {/* Comments */}
      {
        enableComments && (
          <script
            src="https://giscus.app/client.js"
            data-repo="Vallasc/vallasc.com"
            data-repo-id="R_kgDONtFkXw"
            data-category="Blog Post Comments"
            data-category-id="DIC_kwDONtFkX84CmMHZ"
            data-mapping="url"
            data-strict="0"
            data-reactions-enabled="1"
            data-emit-metadata="0"
            data-input-position="bottom"
            data-theme={gscusThemeSrc}
            data-lang="en"
            data-loading="lazy"
            crossorigin="anonymous"
            async
          />
        )
      }
    </div>
    <Footer />
  </body>
</html>
