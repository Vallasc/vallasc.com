---
import BaseHead from "../components/BaseHead.astro";
import BlogHeader from "../components/BlogHeader.astro";
import Footer from "../components/Footer.astro";
import "../styles/global.css";

type Props = {
  title: string;
  description: string;
};

const { title, description } = Astro.props;
console.log(Astro.url.origin)
const gscusThemeSrc = Astro.url.origin + "/gscus/theme.css"
---

<!doctype html>
<html lang="en">
  <head>
    <BaseHead title={title} description={description} />
  </head>
  <body class="serif-text bg-[#fbf9f7]">
    <div class="min-h-screen">
      <div class="mx-auto max-w-3xl px-4 py-6 pt-20">
        <BlogHeader />
        {/* Main Content */}
        <slot />
        {/* Comments */}
        <script
          src="https://giscus.app/client.js"
          data-repo="Vallasc/vallasc.com"
          data-repo-id="R_kgDONtFkXw"
          data-category="Blog Post Comments"
          data-category-id="DIC_kwDONtFkX84CmMHZ"
          data-mapping="url"
          data-strict="0"
          data-reactions-enabled="1"
          data-emit-metadata="0"
          data-input-position="bottom"
          data-theme={gscusThemeSrc}
          data-lang="en"
          data-loading="lazy"
          crossorigin="anonymous"
          async></script>
      </div>
      <Footer />
    </div>
  </body>
</html>
