---
interface Props {
  date: Date ;
}

const { date } = Astro.props;
const formattedDate = date.toLocaleDateString("en-GB", {
  day: "numeric",
  month: "long",
  year: "numeric",
});
const [day, month, year] = formattedDate.split(' ');
---

<time datetime={date.toISOString()}>
	{day} {month}, {year}
</time>
